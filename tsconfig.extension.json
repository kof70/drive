{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist/extension",
    "rootDir": "./src/extension",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "noEmit": true
  },
  "include": [
    "src/extension/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
